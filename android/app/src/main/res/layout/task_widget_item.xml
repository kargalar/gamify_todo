<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/task_item_background"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center_vertical">

    <!-- Status dot -->
    <ImageView
        android:id="@+id/task_status_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/status_dot_pending"
        android:layout_marginEnd="12dp"
        android:contentDescription="Status" />

    <!-- Task title -->
    <TextView
        android:id="@+id/task_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Task"
        android:textColor="#E0E0E8"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:letterSpacing="0.01" />

    <!-- Subtitle (counter/timer info) -->
    <TextView
        android:id="@+id/task_item_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666688"
        android:textSize="11sp"
        android:layout_marginStart="8dp"
        android:text="" />

</LinearLayout>
