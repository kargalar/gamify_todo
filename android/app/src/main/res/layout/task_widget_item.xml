<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/task_item_background"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center_vertical">

    <!-- Task title -->
    <TextView
        android:id="@+id/task_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Task"
        android:textColor="#E0E0E0"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Progress text (counter: 3/10, timer: 00:15:30) -->
    <TextView
        android:id="@+id/task_item_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#888888"
        android:textSize="11sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:text=""
        android:visibility="gone" />

    <!-- Status badge (Done / Fail) -->
    <TextView
        android:id="@+id/task_item_status_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/badge_active_bg"
        android:textColor="#64B5F6"
        android:textStyle="bold"
        android:textSize="9sp"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginStart="8dp"
        android:text=""
        android:visibility="gone" />

</LinearLayout>
