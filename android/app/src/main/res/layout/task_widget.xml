<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="8dp"
	android:background="#1F1F1F">

	<!-- Header with task count and work time -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="4dp"
		android:background="@drawable/task_item_background">

		<TextView
			android:id="@+id/header_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Today's Tasks"
			android:textSize="11sp"
			android:textColor="#B0B0B0"
			android:gravity="center"
			android:paddingBottom="2dp" />

		<TextView
			android:id="@+id/task_count_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="24sp"
			android:textColor="#64B5F6"
			android:text="0"
			android:textStyle="bold"
			android:gravity="center" />
	</LinearLayout>

	<!-- Hide completed toggle -->
	<LinearLayout
		android:id="@+id/hide_completed_row"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:paddingStart="6dp"
		android:paddingEnd="6dp"
		android:paddingTop="4dp"
		android:paddingBottom="4dp"
		android:layout_marginTop="4dp"
		android:background="@drawable/task_item_background">

		<ImageView
				android:id="@+id/hide_completed_checkbox"
				android:layout_width="18dp"
				android:layout_height="18dp"
				android:contentDescription="Hide completed toggle"
				android:src="@android:drawable/checkbox_off_background"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Hide completed tasks"
			android:textColor="#B0B0B0"
			android:textSize="11sp"
			android:paddingStart="6dp"/>
	</LinearLayout>

	<!-- Scrollable task list via RemoteViewsService -->
	<ListView
		android:id="@+id/task_list"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_marginTop="4dp"
		android:divider="@android:color/transparent"
		android:dividerHeight="6dp"
		android:paddingStart="0dp"
		android:paddingEnd="0dp"
		android:paddingTop="2dp"
		android:paddingBottom="2dp"/>

	<!-- Empty state when no tasks -->
	<TextView
		android:id="@+id/empty_state"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Loading..."
		android:textSize="12sp"
		android:textColor="#B0B0B0"
		android:gravity="center"
		android:layout_marginTop="16dp"
		android:padding="12dp" />

</LinearLayout>